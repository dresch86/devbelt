[Unit]
Description=Docker Compose App (%i)
PartOf=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/opt/docker-apps/%i
ExecStart=/usr/local/bin/docker-compose -f docker-compose.yml -f leantime/docker-compose.yml up -d --remove-orphans
ExecStop=/usr/local/bin/docker-compose -f docker-compose.yml -f leantime/docker-compose.yml down

[Install]
WantedBy=multi-user.target